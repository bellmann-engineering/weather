import board
import adafruit_dht
import time
 
dhtDevice = adafruit_dht.DHT22(board.D4, use_pulseio=False)

while True:
  temperature_c = dhtDevice.temperature
  temperature_f = temperature_c * (9 / 5) + 32
  print("Temp: {:.1f} F / {:.1f} C".format(
                temperature_f, temperature_c
       )
  )
  
  time.sleep(2)
